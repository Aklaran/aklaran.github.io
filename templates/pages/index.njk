{% extends "../layouts/base.njk" %}

{% set pageTitle = 'Bo Tembunkiart - Software Engineer' %}
{% set pageDescription = 'Software engineer who works across the stack to create meaningful solutions. Explorer of mountains, and mountains of code.' %}

{% block content %}
  <!-- About Section -->
  <section class="about container">
    <img src="/images/20221018-three-passes-2003-website.jpg" alt="Bo in front of Ama Dablam" class="headshot">
    <h1 class="greeting">
      Hello! I'm Bo <span class="wave" data-wave>ðŸ‘‹</span>
    </h1>
    <p class="intro-text">
      I'm a software engineer who works across the stack to create meaningful solutions. 
      I'm here to be curious, solve hard problems, and help people.
    </p>
  </section>

  <!-- Projects Section -->
  <section class="container">
    <h2 class="section-title">My Work</h2>
    <div class="projects-grid">
      {% for project in featuredProjects %}
        <div class="project-card">
          <img src="{{ project.image }}" alt="{{ project.title }}" class="project-image">
          <div class="project-info">
            <h3 class="project-title">{{ project.title }}</h3>
            <div class="project-meta">
              <time>{{ project.dateRange }}</time>
              <div class="project-tags">
                {% for tag in project.tags %}
                  <span class="tag">{{ tag }}</span>
                {% endfor %}
              </div>
            </div>
            <p>{{ project.summary }}</p>
            <div class="project-links">
              {% if project.site %}
                <a href="{{ project.site }}" class="project-link" target="_blank" rel="noopener noreferrer">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                    <polyline points="15 3 21 3 21 9"></polyline>
                    <line x1="10" y1="14" x2="21" y2="3"></line>
                  </svg>
                  Visit Site
                </a>
              {% endif %}
              {% if project.repo %}
                <a href="{{ project.repo }}" class="project-link" target="_blank" rel="noopener noreferrer">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
                  </svg>
                  View Code
                </a>
              {% endif %}
              {% if not project.site and not project.repo %}
                <a href="/projects/{{ project.slug }}/" class="project-link">Learn More â†’</a>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="view-all-container">
      <a href="/projects.html" class="view-all-link">View All Projects â†’</a>
    </div>
  </section>

  <!-- Recent Blog Posts -->
  <section class="container section-spacing">
    <h2 class="section-title">Recent Adventures</h2>
    <div class="blog-grid">
      {% for post in recentPosts %}
        <a href="/blog/{{ post.slug }}/" class="blog-card">
          <img src="{{ post.image }}" alt="{{ post.title }}" class="blog-card-image">
          <div class="blog-card-overlay">
            <h3 class="blog-card-title">{{ post.title }}</h3>
            <time class="blog-card-date">{{ post.dateFormatted }}</time>
            <p class="blog-card-blurb">{{ post.blurb }}</p>
          </div>
        </a>
      {% endfor %}
    </div>
    <div class="view-all-container">
      <a href="/blog.html" class="view-all-link">Read All Posts â†’</a>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="container contact-section">
    <h2>Let's Connect</h2>
    <div class="contact-links">
      <a href="https://www.linkedin.com/in/bo-tembunkiart/" target="_blank" rel="noopener noreferrer">LinkedIn</a>
      <a href="mailto:botbunk@gmail.com">Email</a>
      <a href="https://www.instagram.com/botbunk/" target="_blank" rel="noopener noreferrer">Instagram</a>
      <a href="https://www.youtube.com/watch?v=hsJUNatpDNw" target="_blank" rel="noopener noreferrer">YouTube</a>
    </div>
  </section>
{% endblock %}
