{% extends "layouts/base.njk" %}

{% set pageTitle = title + ' - Bo Tembunkiart' %}
{% set pageDescription = blurb %}
{% set ogType = 'article' %}
{% set ogTitle = title %}
{% set ogDescription = blurb %}
{% set mainClass = "blog-post" %}

{% block content %}
  <article class="blog-post-content">
    <header class="blog-post-header">
      <h1>{{ title }}</h1>
      <time datetime="{{ dateISO }}">{{ dateFormatted }}</time>
    </header>
    
    <div class="blog-post-body">
      {{ content | safe }}
    </div>
    
    <footer class="blog-post-footer">
      <a href="../../blog.html" class="back-link">‚Üê Back to Blog</a>
    </footer>
  </article>
{% endblock %}
